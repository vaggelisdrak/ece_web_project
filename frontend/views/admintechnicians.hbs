<div class="arrow-plus">
    <button class="back-button" onclick="goBack()"><i class="fas fa-arrow-circle-left"></i></button>
    <button class="add-button" data-toggle="modal" data-target="#addTechnicianModal"><i class="fas fa-plus-circle"></i></button>
</div>

<h1 class="technicians title">
    <i class="fas fa-tools d-none d-sm-inline"></i> 
    Technicians List
    <i class="fas fa-tools d-none d-sm-inline"></i> 
</h1>

<div class="table-responsive">

    <table id="myTable" class="technicianstable table-light table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Contact</th>
                <th scope="col">Specialty</th>
            </tr>
        </thead>
        <tbody>
            
            {{#each technicians}}
                <tr>
                    <th scope="row">{{this.id}}</th>
                    <td>{{this.full_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phone_number}}</td>
                    <td>{{this.specialty}}</td>
                </tr>
            {{/each}}

        </tbody>
    </table>
</div>

<div class="modal fade" id="addTechnicianModal" tabindex="-1" role="dialog" aria-labelledby="addTechnicianModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addTechnicianModalLabel">Add Technician</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="addTechnicianForm">
            <div class="form-group">
                <label for="id">ID</label>
                <input type="text" class="form-control" id="tech_id" name="tech_id" required>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="contact">Contact</label>
                <input type="text" class="form-control" id="contact" name="contact" required>
            </div>
            <div class="form-group">
                <label for="specialty">Specialty</label>
                <input type="text" class="form-control" id="specialty" name="specialty" required>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="addtech" class="btn btn-primary addtech">Add</button>
      </div>
    </div>
  </div>
</div>

<script>
    function goBack() {
    window.history.back();
    }
</script>